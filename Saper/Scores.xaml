<Window x:Class="Saper.Scores"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Saper"
        mc:Ignorable="d"
        Title="Scores" Height="300" Width="300"
        DataContext="{Binding Path=ViewModel, RelativeSource={RelativeSource Self}}">

    <DockPanel>
        <StackPanel DockPanel.Dock="Top">
            <TextBlock Margin="20" Text="{Binding Elapsed, Mode=OneWay, StringFormat='You win! Your time is: {0}'}"></TextBlock>
            <ComboBox  Margin="20"></ComboBox>
        </StackPanel>
        <Grid></Grid>
        <Grid DockPanel.Dock="Bottom"
              Margin="10"  VerticalAlignment="Bottom">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Button Grid.Column="1" Margin="10"
                    Content="OK"
                    Click="OK_Button"/>            
        </Grid>
    </DockPanel>
    
</Window>
